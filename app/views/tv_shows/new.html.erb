<h1>New Tv Show</h1>

<div class="row">
  <div class="col-6">
<h3>Ingrese una Serie o Pel√≠cula nueva</h3>

<%= form_with model: TvShow.new do |form| %>
  <div class="form-check">
    <%= form.label :name, "Nombre" %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-check">
    <%= form.label :summary, "Resumen" %>
    <%= form.text_area :summary, class: 'form-control' %>
      </div>
  <div class="form-check">
    <%= form.label :release_date, "Fecha" %>
    <%= form.date_field :release_date, class: 'form-control'%>
  </div>
  <div class="form-check">
    <%= form.label :rating %> 
    <%= form.number_field :rating, step: '0.1', class: 'form-control'%>
  </div>
  <br>
    <%= form.submit  "Enviar", class: "btn btn-success mt-3" %>
<% end %>
  </div>
  </div>
<br>
<%= link_to 'Back Tv Show', tv_shows_path %>