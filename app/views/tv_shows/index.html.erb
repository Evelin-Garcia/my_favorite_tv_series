<%= form_with model: TvShow.new do |form| %>
  <div class="form-check">
    <%= form.label :name, "Nombre" %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-check">
    <%= form.label :summary %>
    <%= form.text_area :summary, class: 'form-control' %>
      </div>
  <div class="form-check">
    <%= form.label :release_date %>
    <%= form.date_field :release_date, class: 'form-control'%>
  </div>
  <div class="form-check">
    <%= form.label :rating %> 
    <%= form.number_field :rating, step: '0.1', class: 'form-control'%>
  </div>
    <%= form.submit  "Enviar", class: "btn btn-success mt-3" %>
<% end %>
